<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:gravity="center|right"
        android:text="القائم بالعملية"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_14sdp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginLeft="5dp"
        android:gravity="center|right"
        android:text="تاريخ الدفع"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_8sdp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="@drawable/round_background"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="مبلغ العملية"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/txtMoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50 ج"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtToName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="اسم المرسل اليه"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/txtToPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="رقم هاتف المرسل اليه"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtPaymentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رقم العمليه"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_6sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

    </View>
</LinearLayout>




